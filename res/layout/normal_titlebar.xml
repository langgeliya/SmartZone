<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sec_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="@color/normal_title_background"
    android:gravity="center_vertical" >

    <!-- 标题栏左边返回图标 -->

    <ImageButton
        android:id="@+id/title_left_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/comm_press_background"
        android:src="@drawable/back_translation" />

    <!-- 标题栏文字 -->

    <TextView
        android:id="@+id/sec_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <!-- 标题栏右边第一个图标 -->

    <ImageButton
        android:id="@+id/title_right_img_1"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sec_title_tv"
        android:background="#00000000"
        android:contentDescription="@null"
        android:visibility="gone" />

    <!-- 标题栏右边第二个图标 -->

    <RelativeLayout
        android:id="@+id/title_right_layout_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/comm_press_background" >

        <ImageButton
            android:id="@+id/title_right_img_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
        	android:background="#00000000"
        	android:clickable="false"
            android:contentDescription="@null"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc" />

</RelativeLayout>