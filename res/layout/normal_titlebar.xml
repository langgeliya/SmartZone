<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sec_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="#F4D230"
    android:gravity="center_vertical" >

    <!-- 标题栏左边返回图标 -->

    <ImageButton
        android:id="@+id/title_left_img"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/comm_press_background"
        android:src="@drawable/back_translation" />

    <!-- 标题栏文字 -->

    <TextView
        android:id="@+id/sec_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/tab_sel"
        android:textSize="20sp" 
        android:paddingLeft="100dip"
        android:paddingRight="100dip"
        android:ellipsize="end"/>

    <!-- 标题栏右边第一个图标 -->

    <ImageButton
        android:id="@+id/title_right_img_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/title_right_img_2"
        android:background="@drawable/comm_press_background"
        android:contentDescription="@null"
        android:visibility="gone" />

    <!-- 标题栏右边第二个图标 -->

    <ImageButton
        android:id="@+id/title_right_img_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/comm_press_background"
        android:contentDescription="@null"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc" />
</RelativeLayout>
